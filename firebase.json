{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
"headers": [
  {
    "source": "/sitemap.xml",
    "headers": [
      {
        "key": "Content-Type",
        "value": "application/xml"
      }
    ]
  }
]
